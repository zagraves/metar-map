{
  "lights": {
    "config": {}
  },
  "base-layer-codes": [
    "BKN",
    "OVC",
    "VV"
  ],
  "metar-source": {
    "host": "https://www.aviationweather.gov",
    "path": "/metar/data?format=raw&hours=2&ids=%1$s",
    "selector": "#awc_main_content code",
    "headers": {
      "user-agent": ""
    }
  },
  "fault": {
    "category": {
        "name": "UNKNOWN",
        "icon": "⚪️",
        "colors": [211, 211, 211]
    }
  },
  "flight-categories": [
    {
      "name": "VFR",
      "icon": "🟢",
      "colors": [90, 199, 59],
      "expression": [
        "%(visibility)d > 5",
        "%(cloud_base)d > 3000"
      ]
    },
    {
      "name": "MVFR",
      "icon": "🔵",
      "colors": [50, 104, 213],
      "expression": [
        "3 <= %(visibility)d <= 5",
        "1000 <= %(cloud_base)d <= 3000"
      ]
    },
    {
      "name": "IFR",
      "icon": "🔴",
      "colors": [234, 62, 37],
      "expression": [
        "1 <= %(visibility)d < 3",
        "500 <= %(cloud_base)d < 1000"
      ]
    },
    {
      "name": "LIFR",
      "icon": "🟣",
      "colors": [235, 88, 237],
      "expression": [
        "%(visibility)d < 1",
        "0 <= %(cloud_base)d < 500"
      ]
    }
  ]
}
