{
  "lights": {
    "config": {}
  },
  "base-layer-codes": [
    "BKN",
    "OVC",
    "VV"
  ],
  "metar-source": {
    "uri": "https://aviationweather.gov/api/data/metar?ids=%1$s",
    "headers": {
      "user-agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64; rv:83.0) Gecko/20100101 Firefox/83.0"
    }
  },
  "light-target": {
    "uri": "http://metar-map.local/update",
    "headers": {
      "Authorization": "Bearer %1$s"
    }
  },
  "fault": {
    "category": {
        "name": "UNKNOWN",
        "icon": "⚪️",
        "colors": [255, 255, 255]
    }
  },
  "flight-categories": [
    {
      "name": "VFR",
      "icon": "🟢",
      "colors": [0, 255, 0],
      "expression": [
        "%(visibility)d > 5",
        "%(cloud_base)d > 3000"
      ]
    },
    {
      "name": "MVFR",
      "icon": "🔵",
      "colors": [0, 0, 255],
      "expression": [
        "3 <= %(visibility)d <= 5",
        "1000 <= %(cloud_base)d <= 3000"
      ]
    },
    {
      "name": "IFR",
      "icon": "🔴",
      "colors": [255, 0, 0],
      "expression": [
        "1 <= %(visibility)d < 3",
        "500 <= %(cloud_base)d < 1000"
      ]
    },
    {
      "name": "LIFR",
      "icon": "🟣",
      "colors": [255, 0, 255],
      "expression": [
        "%(visibility)d < 1",
        "0 <= %(cloud_base)d < 500"
      ]
    }
  ]
}
